<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="restaurant.Restaurant">
	<select id="restList" resultType="restaurant.model.RestaurantBean">
		select * from rest
		<if test="WhatColumn == 'rname'">
			where rname like #{keyword}
		</if>
		<if test="WhatColumn == 'rlocation'">
			where rlocation like #{keyword}
		</if>
	</select>
	
	<select id="totalCount" resultType="int">
		select count(*) from rest
		<if test="WhatColumn == 'rname'">
			where rname like #{keyword}
		</if>
		<if test="WhatColumn == 'rlocation'">
			where rlocation like #{keyword}
		</if>
	</select>
	
	<select id="restDetail" resultType="myRestaurant">
		select * from rest where rnum = #{rnum}
	</select>
	
	<insert id="restInsert">
		insert into rest(rnum,name,r_xpos,r_ypos,address,image,rtel1,rtel2,rtel3,rtime1,rtime2,rdate)
		values(resseq.nextval,#{name},#{xpos},#{ypos},
		#{address},#{image},#{rtel1},
		#{rtel2},#{rtel3},#{rtime1},#{rtime2},#{rdate})
	</insert>
</mapper>